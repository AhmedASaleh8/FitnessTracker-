<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    android:padding="16dp">

    <!-- Header: Back + Title -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_arrow"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="12dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:overScrollMode="always">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- User Header Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2D2D2D"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/profile"
                    android:background="#444444"
                    android:padding="8dp"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvDisplayName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Athlete"
                        android:textColor="#FFD700"
                        android:textStyle="bold"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tvDisplayHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap Edit to change your name"
                        android:textColor="#BBBBBB"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnEditName"
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:text="Edit"
                    android:textStyle="bold"
                    android:background="#FF9800"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Body Metrics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2D2D2D"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body Metrics"
                    android:textColor="#FFD700"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height (cm)"
                            android:textColor="#CCCCCC"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etHeight"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="numberDecimal"
                            android:background="@android:drawable/editbox_background"
                            android:hint="e.g. 175"
                            android:textColor="@color/black"
                            android:textColorHint="#AAAAAA"
                            android:padding="12dp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight (kg)"
                            android:textColor="#CCCCCC"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etWeight"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="numberDecimal"
                            android:background="@android:drawable/editbox_background"
                            android:hint="e.g. 70"
                            android:textColor="@color/black"
                            android:textColorHint="#AAAAAA"
                            android:padding="12dp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvBMI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMI: --"
                        android:textColor="#FFC107"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvBMIClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  (—)"
                        android:textColor="#BBBBBB"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSaveMetrics"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Save Metrics"
                    android:textStyle="bold"
                    android:background="#FF9800"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Goal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2D2D2D"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal"
                    android:textColor="#FFD700"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rgGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/rbGain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gain Muscle"
                        android:textColor="#EEEEEE" />

                    <RadioButton
                        android:id="@+id/rbLose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lose Fat"
                        android:textColor="#EEEEEE"
                        android:layout_marginStart="12dp" />

                    <RadioButton
                        android:id="@+id/rbMaintain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maintain"
                        android:textColor="#EEEEEE"
                        android:layout_marginStart="12dp" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Weight (kg) — optional"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/etTargetWeight"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="numberDecimal"
                    android:background="@android:drawable/editbox_background"
                    android:hint="e.g. 68"
                    android:textColor="@color/black"
                    android:textColorHint="#AAAAAA"
                    android:padding="12dp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly training days"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <Spinner
                    android:id="@+id/spWeeklyDays"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@android:drawable/editbox_dropdown_light_frame" />

                <Button
                    android:id="@+id/btnSaveGoal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Save Goal"
                    android:textStyle="bold"
                    android:background="#FF9800"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Quick Start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2D2D2D"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Start"
                    android:textColor="#FFD700"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnStartArms"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Start Arms"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:background="#555555"
                        android:textColor="#FFFFFF" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp" />

                    <Button
                        android:id="@+id/btnStartLegs"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Start Legs"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:background="#555555"
                        android:textColor="#FFFFFF" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp" />

                    <Button
                        android:id="@+id/btnStartCore"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Start Core"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:background="#555555"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
